rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // قواعد المستخدمين الإداريين
    match /admin_users/{userId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == userId || 
         get(/databases/$(database)/documents/admin_users/$(request.auth.uid)).data.role in ['super_admin', 'admin']);
    }
    
    // قواعد إعدادات التطبيق الديناميكية
    match /app_settings/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/admin_users/$(request.auth.uid)).data.role in ['super_admin', 'admin'];
    }
    
    // قواعد المستخدمين العاديين (العملاء)
    match /users/{userId} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/admin_users/$(request.auth.uid)).data.role in ['super_admin', 'admin', 'operations', 'support'];
    }
    
    // قواعد السائقين
    match /drivers/{driverId} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/admin_users/$(request.auth.uid)).data.role in ['super_admin', 'admin', 'operations'];
    }
    
    // قواعد الطلبات
    match /orders/{orderId} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/admin_users/$(request.auth.uid)).data.role in ['super_admin', 'admin', 'operations', 'support'];
    }
    
    // قواعد الإشعارات
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/admin_users/$(request.auth.uid)).data.role in ['super_admin', 'admin', 'support'];
    }
    
    // قواعد التقارير
    match /reports/{reportId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/admin_users/$(request.auth.uid)).data.role in ['super_admin', 'admin', 'financial'];
    }
    
    // قواعد سجل العمليات (Audit Logs)
    match /audit_logs/{logId} {
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/admin_users/$(request.auth.uid)).data.role in ['super_admin', 'admin'];
      allow create: if request.auth != null;
      allow update, delete: if false; // منع التعديل أو الحذف
    }
    
    // قواعد المدن والمناطق
    match /cities/{cityId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/admin_users/$(request.auth.uid)).data.role in ['super_admin', 'admin'];
    }
    
    // قواعد الإحصائيات
    match /statistics/{statId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/admin_users/$(request.auth.uid)).data.role in ['super_admin', 'admin'];
    }
  }
}

